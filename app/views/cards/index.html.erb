<table class="table">
  <tr>
    <th>Колода</th>
    <th>Слово</th>
    <th>Перевод</th>
    <th>Дата проверки</th>
    <th></th>
    <th></th>
  </tr>
  <% @cards.each do |card| %>
    <tr>
      <td><%= card.deck.name %></td>
      <td><%= card.original_text %></td>
      <td><%= card.translated_text %></td>
      <td><%= card.review_date.strftime("%d/%m/%Y") %></td>
      <td><%= link_to 'Edit', edit_card_path(card) %></td>
      <td><%= link_to 'Delete', card_path(card),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
