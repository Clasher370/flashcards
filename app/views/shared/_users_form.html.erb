<%= simple_form_for [namespace, @user] do |f| %>
    <%= f.input :email %>
    <%= f.input :locale, collection: I18n.available_locales %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :current_deck_id, collection: current_user.decks if current_user %>
    <%= f.button :submit %>
<% end %>
